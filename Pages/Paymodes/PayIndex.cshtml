@page
@model SupermarketWEB.Pages.Paymodes.PayIndexModel

@{
    ViewData["Title"] = "Index Paymodes";
}
<h1>Index Paymodes</h1>
<p>
    <a asp-page="PayCreate" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Paymode[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paymode[0].Observation)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Paymode)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observation)
                </td>
                <td>
                    <a asp-page="./PayDelete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    <a asp-page="./PayEdit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                </td>

            </tr>
        }
    </tbody>
</table>
